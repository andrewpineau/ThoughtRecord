<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ThoughtRecordApp.Resources.Styles">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Resources/Styles/AppThemeStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <Style x:Key="InformationSubheader" TargetType="TextBlock" BasedOn="{StaticResource BodyTextBlock}">
        <Setter Property="Margin" Value="0, 10, 0, 2" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>
    <Style x:Key="ListItem" TargetType="TextBlock" BasedOn="{StaticResource BodyTextBlock}">
        <Setter Property="Margin" Value="0, 5, 0, 5" />
    </Style>
</ResourceDictionary>

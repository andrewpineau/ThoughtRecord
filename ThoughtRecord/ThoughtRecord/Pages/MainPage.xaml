<Page
    x:Class="ThoughtRecord.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ThoughtRecord"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <RelativePanel Grid.Row="0">
            <Button x:Name="MenuToggleButton" 
                    Width="45" Height="45" 
                    FontFamily="Segoe MDL2 Assets"                  
                    FontSize="30"
                    Content="&#xE700;"
                    RelativePanel.AlignLeftWithPanel="True"
                    Background="MediumSeaGreen"
                    Foreground="White"
                    Click="MenuToggleButton_Click" />
            <TextBlock Style="{ThemeResource TitleTextBlockStyle}" 
                       Text="Thought Record" 
                       RelativePanel.RightOf="MenuToggleButton"
                       RelativePanel.AlignVerticalCenterWithPanel="True"
                       Margin="10,0,0,0"/>
        </RelativePanel>
        <SplitView x:Name="MainSplitView"
                   Grid.Row="1"
                   OpenPaneLength="200"
                   CompactPaneLength="45"
                   DisplayMode="CompactOverlay">
            <SplitView.Pane>
                <ListBox>
                    <ListBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       FontSize="25" Text="&#xE70F;" Margin="-2,0,10,0"
                                       Foreground="MediumSeaGreen"/>
                            <TextBlock Text="New Thought Record" Foreground="DarkGray"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       FontSize="25" Text="&#xE787;" Margin="-2,0,10,0"
                                       Foreground="MediumSeaGreen"/>
                            <TextBlock Text="View Thought Records" Foreground="DarkGray"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       FontSize="25" Text="&#xE115;" Margin="-2,0,10,0"
                                       Foreground="MediumSeaGreen"/>
                            <TextBlock Text="Settings" Foreground="DarkGray"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </SplitView.Pane>
            <Frame x:Name="MainFrame" />
        </SplitView>
    </Grid>
</Page>
